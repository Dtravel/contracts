{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.ts", "*.js"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,    
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "all"
      }
    }
  ]
}
